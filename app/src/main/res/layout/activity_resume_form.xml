<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- NAME -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <!-- EMAIL -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <!-- PHONE -->
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <!-- SUMMARY -->
        <EditText
            android:id="@+id/etSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Summary"
            android:minLines="3"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <!-- EXPERIENCE -->
        <EditText
            android:id="@+id/etExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Experience"
            android:minLines="3"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <!-- EDUCATION -->
        <EditText
            android:id="@+id/etEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Education"
            android:minLines="2"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <!-- SKILLS -->
        <EditText
            android:id="@+id/etSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Skills"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <!-- CERTIFICATIONS -->
        <EditText
            android:id="@+id/etCertifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Certifications"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <!-- PROJECTS -->
        <EditText
            android:id="@+id/etProjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Projects"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <!-- LANGUAGES -->
        <EditText
            android:id="@+id/etLanguages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Languages"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <!-- AWARDS -->
        <EditText
            android:id="@+id/etAwards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Awards"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="10dp"/>

        <!-- VOLUNTEER -->
        <EditText
            android:id="@+id/etVolunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Volunteer Work"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- BUTTON (ONLY ONE!) -->
        <Button
            android:id="@+id/btnCreateResume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Resume"/>

    </LinearLayout>
</ScrollView>
